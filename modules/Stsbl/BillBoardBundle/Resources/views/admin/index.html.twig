{% extends bundle ~ "/page.html.twig" %}

{% block page_title %}
    {% if not is_admin %}
        {{ _("Manage") }} -
    {% endif %}
    {{ _("Bill-Board") }} 
    {% if is_admin %}
        - {{ _("Administration") }}
    {% endif %}
{% endblock %}

{% block content %}
<div class="list-actions">
    <ul class="list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('manage_billboard_category_index') }}">{{ icon('fa-list') }}{{ _('Categories') }}</a>
        </li>
    </ul>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ _('Rules') }}</h3>
    </div>
    <div class="panel-body">
        {{ form(rules_form, {'style': null}) }}
    </div>
</div>
{% endblock %}
