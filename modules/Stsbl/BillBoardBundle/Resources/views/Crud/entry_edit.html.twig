{% extends '@IServCrud/Crud/edit.html.twig' %}

{% block content %}
    {% if fields is empty %}
        <div class="alert alert-warning">
            {{ _("There are no bill-board categories configured yet. Please contact your administrator.") }}
        </div>
    {% else %}
        {% if rules is not empty %}
            <div class="alert alert-info">
                <p><strong> {{ _("Rules for posting on the Bill-Board:") }}</strong></p>
                <p>{{ rules | nl2br }}</p>
            </div>
        {% endif %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% if app.environment != 'prod' %}
        <!-- {{ _self }} => TinyMCE -->
    {% endif %}
    <script type="text/javascript" src="{{ asset('js/tinymce.js', 'vendor') }}"></script>
    {% if app.request.locale == 'de_DE' %}
        <script type="text/javascript" src="{{ asset('js/tinymce-de.js', 'vendor') }}"></script>
    {% endif %}

    {% if app.environment != 'prod' %}
        <!-- {{ _self }} => editor.js -->
    {% endif %}
    <script src="{{ asset('js/editor.js', 'stsbl_bill_board') }}"></script>
{% endblock %}